<h1><%= @post.title %></h1>
<p>Por <%= @post.user.email %> em <%= @post.created_at.strftime("%d/%m/%Y %H:%M") %></p>
<p><%= @post.content %></p>

<% if @post.user == current_user %>
  <%= button_to 'Excluir Post', post_path(@post), method: :delete, data: { confirm: 'Tem certeza que deseja excluir este post?' }, class: 'btn btn-danger' %>
<% end %>

<hr>

<h2>Coment치rios</h2>
<% @post.comments.each do |comment| %>
  <div class="comment">
    <p><strong><%= comment.user.email %></strong> disse:</p>
    <p><%= comment.content %></p>
    <% if comment.user == current_user || @post.user == current_user %>
      <%= button_to 'Excluir Coment치rio', post_comment_path(@post, comment), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger' %>
    <% end %>
  </div>
  <hr>
<% end %>

<% if user_signed_in? %>
  <h3>Deixar um coment치rio</h3>
  <%= form_with model: [@post, Comment.new], local: true do |form| %>
    <div class="field">
      <%= form.text_area :content, placeholder: 'Seu coment치rio...' %>
    </div>
    <div class="actions">
      <%= form.submit 'Comentar', class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>
